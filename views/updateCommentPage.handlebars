<!-- References Page -->
<div class="bg-light p-4 border rounded border-dark mb-2 mb-5" id="referencePage">
  <div class="border-bottom border-dark pb-1 mb-3 d-flex justify-content-between">
    <h3 class="text-info">My Public Referrals</h3>
  </div>
  {{#each comments}}
    <div class="card mb-2 rounded-0 p-3" data-id="{{id}}">
      <div class="row">
        <div class="col-12 col-md-4 col-lg-3">
          <div class="row">
            <div class="pt-2 col-4 col-sm-3 col-md-5">
              <img src="{{image}}" class="img-circle	border border-dark" alt="">
            </div>
            <div class="col-8 col-sm-9 col-md-7">
              <small class="mb-0 mt-0 pt-0 mb-0 pb-0 border-bottom text-secondary"><b>{{name}}</b></small>
              <small><p class="mb-0 pt-0">{{occupation}}, <b>{{company}}</b></p></small>
              <small><p><i>{{location}}</i></p></small>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-8 col-lg-9">
          <textarea class="bg-light p-2 w-100" placeholder="{{message}}"></textarea>
        </div>
      </div>
      <div class="mb-0 border-top">
        <p class="mb-0"><small><i>Posted: {{createdAt}}</i></small></p>
      </div>  
    </div>
  {{/each}}
  <div class="d-flex justify-content-center">
    <button class="btn btn-secondary mr-2">Back</button>
    <button class="btn btn-success">Save Changes</button>
  </div>
</div>
<!-- End of References Page -->

